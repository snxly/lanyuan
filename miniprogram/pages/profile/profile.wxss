/* pages/profile/profile.wxss */

.container {
  padding: 20rpx;
  background-color: #f7f7f7;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
}

.user-avatar {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f1f1f1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #999;
}

.login-btn {
  background: #07c160;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 功能菜单 */
.menu-list {
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 32rpx;
}

.menu-arrow {
  font-size: 36rpx;
  color: #ccc;
}

/* 应用信息 */
.app-info {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

.app-version {
  display: block;
  margin-bottom: 10rpx;
}

.app-copyright {
  display: block;
}