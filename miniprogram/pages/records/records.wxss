/* pages/records/records.wxss */

.container {
  padding: 20rpx;
  background-color: #f7f7f7;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #07c160, #05a75a);
  color: white;
  padding: 40rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx;
  font-size: 32rpx;
  color: #999;
}

/* 记录列表 */
.records-list {
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.table-header {
  display: grid;
  grid-template-columns: 2fr 1fr;
  padding: 30rpx;
  border-bottom: 2rpx solid #eee;
  font-weight: 600;
  font-size: 28rpx;
  background: #fafafa;
  border-radius: 24rpx 24rpx 0 0;
}

.record-row {
  display: grid;
  grid-template-columns: 2fr 1fr;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 28rpx;
}

.record-row:last-child {
  border-bottom: none;
}

.record-time {
  display: flex;
  align-items: center;
}

.record-amount {
  font-weight: 600;
  color: #07c160;
  text-align: right;
}

.time-badge {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background: #f1f1f1;
  margin-left: 16rpx;
}

.today {
  background: rgba(7, 193, 96, 0.15);
  color: #07c160;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.load-more {
  color: #10aeff;
}